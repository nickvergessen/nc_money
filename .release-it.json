{
  "hooks": {
    "before:init": [
      "npm run build",
      "npm run sign",
      "npm run package"
    ],
    "after:release": [
      "TAG_NAME=v${version} npm run upload"
    ]
  },
  "git": {},
  "npm": false,
  "github": {
    "release": true,
    "assets": [
      "money.tar.gz"
    ]
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "package.json",
        "appinfo/info.xml"
      ]
    },
    "@release-it/keep-a-changelog": {
      "addUnreleased": true
    }
  }
}
